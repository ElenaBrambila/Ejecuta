
@{
    ViewBag.Title = "Iniciar Sesion";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Iniciar sesión</h3>
                </div>
                <div class="panel-body">
                    <form role="form" id="frmAcceso">
                        <fieldset>
                             <div class="form-group">
                                 <select name="idTipoUsuario">
                                     <option value="1">Ejecutivo de cuenta</option>
                                     <option value="2">Promotor</option>
                                     <option value="6">Cliente</option>
                                 </select>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="E-mail" name="usuario" type="email" autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password" name="password" type="password" value="">
                            </div>

                            <!-- Change this to a button or input when using this as a form -->
                            
                            <a onclick="$('#frmAcceso').submit();" href="javascript:void(0);" class="btn btn-lg btn-success btn-block">
                                Ingresar
                            </a>
                        </fieldset>
                    </form><br />
                    <a style="display:none;" href="/Acceso/Recuperar">¿Olvidó su contraseña?</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {

        $("#frmAcceso").submit(function (e) {

            e.preventDefault();

            url = "@Url.Content("/Acceso/Acceder")";
            param = $(this).serialize();

            jsShowWindowLoad()

            $.post(url, param, function (data) {
                if (data == "1") {
                    document.location.href = "@Url.Content("~/")";
                } else {
                    MensajeError(data);
                }
                jsRemoveWindowLoad();
            })
            return false;
        })
    })
</script>


@{
    ViewBag.Title = "Cadenas";
}


<div style="background-color:#eee;padding:10px" class="head-module">
    <span style="margin-right:35px" class="modulo-titulo">Cadenas</span>

    <span class="boton-style" style="float:right" onclick="jsNuevo()">
        <img class="boton-image" src="~/Images/icon_new_element.png" />
    </span>
</div>
<hr />
<div id="divGrid"> 
    @Html.Partial("~/Views/Cadena/Listado.cshtml")
</div>

<script>

    $(document).ready(function () {
       
        
    })

    //funciones

    function jsNuevo() {

        url="@Url.Content("~/Cadena/Nuevo")";
        jsShowDialog(url, 400,300, "Nueva Cadena")
    }

    function jsEditar(id) {

        url="@Url.Content("~/Cadena/Editar")"+"?id="+id;
        jsShowDialog(url, 400,300, "Editar Cadena")
    }

    function jsEliminar(id){
        if(confirm("¿Estas seguro de eliminar la cadena?")){

            url = "@Url.Content("~/Cadena/Eliminar")";
            parametros = "id=" + id;
            jsShowWindowLoad();

            $.post(url, parametros, function (data) {

                if (data == "1") {
                    MensajeExito("Eliminado.")
                    jsRefrescaGrid("tabla")
                } else {
                    MensajeError(data) //trae el error data
                } 

                jsRemoveWindowLoad();
            })


        }
    }
</script>
